<div class="container d-flex flex-column justify-content-center align-items-center bg-light border rounded py-4 post_summary post-content">
  <h2 class="col-lg-6 col-md-12 post_title"> Post # <%= post.id %> </h2>
  <p class="col-lg-6 col-md-12 post_text"><%= truncate(post.content, length: 250, omission: "...") %></p>
  <div class="container d-flex justify-content-center align-items-center pt-3">
  <p class="col-lg-2 col-md-6 comment_author"><%= comment.author.name %>: </p>
  <p class="col-lg-4 col-md-6 comment_text"><%= comment.text %></p>
</div>
  <div class="col-lg-6 col-md-12 d-flex align-self-end">
  
    <p class="mx-2">Comments: <%= post.comments.count || 0 %></p>
    <p class="mx-2">Likes: <%= post.likes.count || 0 %></p>
  </div>
</div>