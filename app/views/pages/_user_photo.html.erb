<% if user.photo.present? %>
  <div class="user-photo">
  <% if user.photo.present? %>
    <%= image_tag user.photo, alt: user.name %>
  <% else %>
    <img src="default_user_photo.jpg" alt="No photo">
  <% end %>
</div>
<% else %>
  <div class="user-photo placeholder">
    No photo
  </div>
<% end %>
